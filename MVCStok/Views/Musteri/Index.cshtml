@using MVCStok.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("index", "Musteri", FormMethod.Get))
            {
                <p>
                    <b>Aranacak Müşteri Adı :</b>@Html.TextBox("p")
                    <input type="submit" value="Ara" />
                </p>
            }

<table class="table table-bordered">
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ALERT</th>
    </tr>
    <tbody>
        @foreach (var mustr in Model)
        {
            <tr>
                <td>@mustr.MUSTERIID</td>
                <td>@mustr.MUSTERIAD</td>
                <td>@mustr.MUSTERISOYAD</td>
                <td><a href="/MUSTERI/SIL/@mustr.MUSTERIID" class="btn btn-danger">SİL</a></td>
                <td><a href="/MUSTERI/MusteriGetir/@mustr.MUSTERIID" class="btn btn-info">GÜNCELLE</a></td>
                <td>@Html.ActionLink("SİL BUTONU","SIL", new { id=mustr.MUSTERIID },new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten Silmek İstiyor musunuz ?')" }) </td>
            </tr>
        }
    </tbody>
</table>
<a href="/MUSTERI/YENIMUSTERI/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>

